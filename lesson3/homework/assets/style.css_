html,
body {
  height: 100%;
}

html {
  display: table;
  margin: auto;
}

body {
  width: 1280px;
  display: table-cell;
  vertical-align: middle;
  font-family: myriad-pro, sans-serif;
}

.content-padding {
  padding-left: 50px;
  padding-right: 50px;
  padding-top: 50px;
  padding-bottom: 50px;
}

.product-header {
  background-color: #445162;
  display: flex;
  justify-content: space-between;
}

.product-header-content {
  margin-right: 50px;
}

.product-title {
  font-style: normal;
  font-weight: 500;
  font-size: 55px;
  color: #ffffff;
  line-height: 0.7;
}

ul.marked-list {
  margin-top: 50px;
  font-style: normal;
  font-weight: 500;
  font-size: 19px;
  color: #fff;
  list-style-image: none;
  margin-bottom: 0px;
}

ul.marked-list li {
  margin-bottom: 15px;
}

ul.marked-list li:last-child {
  margin-bottom: 0px;
}

.logo {
  background: url('img/logoo.png');
  background-size: 470px 215px;
  width: 470px;
  height: 215px;
  flex-shrink: 0;
}

.product-description {
  display: flex;
  justify-content: space-between;
}

.product-description-content {
  width: 650px;
  display: flex;
  flex-direction: column;
}

.pd-title {
  width: 100%;
  color: #445161;
  font-size: 30px;
  font-style: normal;
  font-weight: 500;
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.product-text {
  margin-bottom: 20px;
  font-size: 17px;
}

.video-product {
  display: flex;
  width: 431px;
  height: 246px;
  background-color: #445161;
}

.product-feature {
  background-color: #f5f5f5;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.left-feature {
  width: 558px;
}

.right-feature {
  width: 558px;
}

details {
  display: block;
  margin-top: 30px;
}

summary::-webkit-details-marker {
  display: none;
}

summary {
  display: flex;
  outline: none;
  margin-right: 10px;
}

summary::before {
  width: 32px;
  height: 32px;
  content: url('img/plus_icon.png');
  background-color: #445161;
  margin-right: 10px;
  display: flex;
  flex-shrink: 0;
  justify-content: center;
  align-items: center;
}

details[open] {
  margin-top: 30px;
}

details[open] summary {
  margin-top: 0px;
}

details[open] > summary::before {
  width: 32px;
  height: 32px;
  content: url('img/plus_icon.png');
  background-color: #445161;
  margin-right: 10px;
  display: flex;
  flex-shrink: 0;
  justify-content: center;
  align-items: center;
}

details > p {
  margin-top: 0px;
  margin-left: 42px;
  margin-bottom: 0px;
}

.feature-item {
  width: 568px;
  padding-right: 22px;
  display: flex;
}

.img-box {
  width: 33px;
  height: 33px;
  background-color: #445161;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}

.img-plus {
  padding: 7px;
}

.product-screenshots {
  display: flex;
  flex-wrap: wrap;
}

.flex-content {
  display: flex;
  justify-content: space-between;
}

.screenshot {
  display: flex;
  margin: 0px;
  margin-top: 30px;
}

.screenshot img {
  display: block;
  width: 200px;
  height: 150px;
  background-color: #445161;
  flex-shrink: 0;
  margin-right: 15px;
}

.screenshot figcaption {
  color: #445161;
  font-size: 24px;
  font-style: normal;
  font-weight: 500;
}

.screenshot p {
  margin: 0px;
  margin-top: 15px;
  color: #333333;
  font-size: 16px;
  font-style: normal;
  font-weight: 500;
  margin-right: 15px;
}

.left-screenshots {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.right-screenshots {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-reviews {
  background-color: #f5f5f5;
}

.comment-block {
  width: 575px;
  display: flex;
  margin-top: 35px;
}

.review-flex-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.circle {
  height: 76px;
  width: 76px;
  background-color: #445161;
  border-radius: 50%;
  display: inline-block;
  flex-shrink: 0;
}

.comment-block p {
  margin: 0px;
  margin-left: 32px;
  background-color: #ebebeb;
  border: 1px solid #ebebeb;
  border-radius: 5px;
  padding-top: 16px;
  padding-left: 16px;
  padding-right: 20px;
  padding-bottom: 16px;
  font-style: italic;
}

.product-buy {
}

.contacts {
}

.product-buy {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-end;
}

.buy-box {
  border: 0px solid #445162;
  width: 300px;
  margin-top: 30px;
  margin-left: 23px;
  margin-right: 23px;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  background-color: #445162;
}

.box-title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 16px;
  padding-bottom: 16px;
  color: #fff;
  font-size: 24px;
}

.box-cost {
  color: #445162;
  font-size: 40px;
  height: 71px;
  border-left: 2px solid #445162;
  border-right: 2px solid #445162;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.buy-box ol {
  padding-right: 20px;
  padding-top: 20px;
  padding-left: 20px;
  margin: 0px;
  font-size: 14px;
  color: #fff;
  list-style-position: inside;
}

.buy-box li:not(:last-child) {
  margin-bottom: 5px;
}

.buy-box button {
  border: 0px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  margin: 20px;
  padding: 0px;
  padding-top: 15px;
  padding-bottom: 13px;
  color: #445161;
  font-weight: 600;
}

.contacts {
  background-color: #445162;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.contacts-left {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 20px;
  margin-top: 30px;
  align-items: center;
}

.contacts-left input {
  width: 100%;
  border: 0px solid #fff;
  border-radius: 5px;
  height: 41px;
  margin-bottom: 20px;
  padding-left: 11px;
  padding-right: 11px;
  font-size: 16px;
}

::placeholder {
  color: #445162;
  font-size: 16px;
}

.contacts-left textarea {
  width: 100%;
  border: 0px solid #fff;
  border-radius: 5px;
  height: 171px;
  margin-bottom: 20px;
  padding: 11px;
  font-size: 16px;
}

.contacts-left button {
  width: 140px;
  border: 0px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  padding: 0px;
  font-size: 16px;
  padding-top: 14px;
  padding-bottom: 14px;
  color: #445161;
  font-weight: 600;
  justify-content: center;
  align-items: center;
}

.contacts-right {
  display: flex;
  flex-direction: column;
  margin: 20px;
  margin-top: 30px;
  font-size: 16px;
}

.contacts-right span {
  display: flex;
  align-items: center;
  margin-bottom: 18px;
}

.contacts-right i {
  font-size: 26px;
  margin-right: 5px;
}

.contacts a {
  text-decoration: none;
}

.social {
  margin-top: 6px;
}

.social [class*='fa fa-'] {
  background-color: #fff;
  border-radius: 30px;
  color: #445162;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  margin: auto 3px;
  width: 30px;
  font-size: 15px;
  text-align: center;
}

.fg-white {
  color: #fff;
}

.fg-dark {
  color: #445162;
}
.bg-white {
  background-color: #fff;
}

footer {
  display: flex;
  justify-content: center;
  padding-top: 5px;
  padding-bottom: 5px;
  font-size: 12px;
  color: #445162;
}
